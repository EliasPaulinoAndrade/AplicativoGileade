<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagem"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:src="@drawable/teste" />
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/titulo"
                    android:textColor="@color/marrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EJC GILEADE 2017"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/descricao"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/marrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caros amigos, a valorização de fatores  subjetivos
    promove a alavancagem do fluxo de informações.
    Caros amigos, a valorização de fatores  subjetivos
    promove a alavancagem do fluxo de informações."/>
                <TextView
                    android:id="@+id/inicio"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 17/12"
                    android:textStyle="bold"
                    android:textColor="@color/azulescuro" />
                <TextView
                    android:id="@+id/fim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:30 17/12"
                    android:textColor="@color/azulescuro"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
</LinearLayout>