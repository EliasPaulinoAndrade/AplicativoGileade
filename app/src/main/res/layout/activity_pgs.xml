<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bege"
    android:orientation="vertical"
    tools:context="com.example.eliaspaulino.gileade.Pgs">
    <include
        layout="@layout/tool_bar"></include>
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:background="@color/branco"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pgsn"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/marrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caros amigos, a valorização de fatores subjetivos promove a alavancagem do fluxo de informações. "/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="90dp"></View>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="geração de davi"
                            android:textAllCaps="true"
                            android:textColor="@color/marrom"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/marrom"
                            android:text="Caros amigos, a valorização de fatores subjetivos promove a alavancagem do fluxo de informações. Caros amigos, a valorização de fatores subjetivos promove a alavancagem do fluxo de informações. "/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/listaFotos"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="geração de davi"
                            android:textAllCaps="true"
                            android:textColor="@color/marrom"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/marrom"
                            android:text="Caros amigos, a valorização de fatores subjetivos promove a alavancagem do fluxo de informações. "/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/listaFotos2"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="270dp"></View>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
