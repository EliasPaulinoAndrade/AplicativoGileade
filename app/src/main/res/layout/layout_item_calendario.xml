<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/horario"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/conteudo"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:background="@color/bege"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17dp"
            android:id="@+id/horaInicio"
            android:textStyle="bold"
            android:text="12:30"
            android:textColor="@color/marrom"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/horafim"
            android:textColor="@color/marrom"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:30"/>
    </LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@id/horario"
        android:id="@+id/conteudo"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titulo"
            android:textSize="18dp"
            android:textColor="@color/marrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/descricao"
            android:textColor="@color/marrom"
            android:text="Caros amigos, a valorização de fatores
subjetivos promove a alavancagem do
fluxo de informações."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>