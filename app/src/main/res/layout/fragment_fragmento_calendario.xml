<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eliaspaulino.gileade.fragmentos.FragmentoCalendario">

    <FrameLayout
        android:elevation="2dp"
        android:background="@color/branco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/diaSemanaTopo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/azulescuro"
            android:padding="10dp"
            android:text="Quinta, 21 de julho"/>
    </FrameLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/imagemCarregamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:indicatorColor="@color/bege"
        android:visibility="gone"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/informeVazio"
        android:paddingTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/marrom"
        android:text="NENHUM EVENTO REGISTRADO"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaHoras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
