<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="4dp"
    android:padding="5dp"
    android:background="@color/azulescuro"
    tools:context="com.example.eliaspaulino.gileade.fragmentos.FragmentoCalSemanaExpandido">
    <LinearLayout
        android:padding="2.5dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:onClick="diaCliqueExpand"
            android:layout_marginRight="5dp"
            android:background="@drawable/fundohoraselec"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Segunda-Feira"
            android:textAlignment="center"
            android:textColor="@color/azulescuro"
            android:textAllCaps="true"/>
        <TextView
            android:onClick="diaCliqueExpand"
            android:background="@drawable/fundohoradia"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Terça-Feira"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:padding="2.5dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:onClick="diaCliqueExpand"
            android:background="@drawable/fundohoradia"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quarta-Feira"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textAllCaps="true"/>
        <TextView
            android:onClick="diaCliqueExpand"
            android:background="@drawable/fundohoradia"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quinta-Feira"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:padding="2.5dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:onClick="diaCliqueExpand"
            android:background="@drawable/fundohoradia"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sexta-Feira"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:layout_marginRight="5dp"
            android:textAllCaps="true"/>
        <TextView
            android:onClick="diaCliqueExpand"
            android:background="@drawable/fundohoradia"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sábado"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:padding="2.5dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:onClick="diaCliqueExpand"
            android:background="@drawable/fundohoradia"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Domingo"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textAllCaps="true"/>
    </LinearLayout>
</LinearLayout>
